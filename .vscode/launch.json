{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Accounting App",
      "program": "${workspaceFolder}/src/accounting/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/accounting",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--detectOpenHandles"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/accounting",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
